{
    "version": 2,
    "outputDirectory": "public",
    "buildCommand": "echo 'No build needed - assets pre-built'",
    "installCommand": "echo 'No install needed'",
    "functions": {
        "api/index.php": { "runtime": "vercel-php@0.7.2" }
    },
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "true",
        "APP_URL": "https://${VERCEL_URL}",
        "ASSET_URL": "https://${VERCEL_URL}"
    }
}
